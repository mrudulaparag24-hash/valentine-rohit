<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>For Rohit ‚ù§Ô∏è</title>

<style>
body {
    margin: 0;
    height: 100vh;
    font-family: "Segoe UI", sans-serif;
    background: linear-gradient(135deg, #ff9a9e, #fad0c4);
    overflow: hidden;
}

.card {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background: white;
    padding: 40px;
    border-radius: 25px;
    text-align: center;
    box-shadow: 0 15px 40px rgba(0,0,0,0.25);
    z-index: 2;
}

h1 {
    color: #e91e63;
    margin-bottom: 10px;
}

.sticker {
    width: 120px;
    margin: 15px auto 25px;
}

button {
    padding: 14px 35px;
    font-size: 18px;
    border: none;
    border-radius: 40px;
    cursor: pointer;
}

#yes {
    background: #e91e63;
    color: white;
}

#no {
    background: #ddd;
    color: #333;
    position: absolute;
}

/* hearts */
.heart {
    position: absolute;
    font-size: 22px;
    animation: float 6s linear infinite;
    color: pink;
    opacity: 0.85;
}

@keyframes float {
    0% { transform: translateY(100vh) scale(0.6); }
    100% { transform: translateY(-10vh) scale(1.3); }
}
</style>
</head>

<body>

<div class="card" id="card">
    <h1>Will you be my Valentine, Rohit? üíñ</h1>

    <!-- Sticker -->
    <img src="sticker.png" class="sticker">

    <button id="yes" onclick="yesClicked()">YES üíò</button>
    <button id="no">NO üíî</button>
</div>

<script>
const noBtn = document.getElementById("no");

// make NO impossible to click
function moveNo() {
    const x = Math.random() * (window.innerWidth - noBtn.offsetWidth);
    const y = Math.random() * (window.innerHeight - noBtn.offsetHeight);
    noBtn.style.left = x + "px";
    noBtn.style.top = y + "px";
}

noBtn.addEventListener("mouseover", moveNo);
noBtn.addEventListener("click", moveNo);
noBtn.addEventListener("touchstart", moveNo);

function yesClicked() {
    // replace page after YES
    document.body.innerHTML = `
    <div style="
        display:flex;
        flex-direction:column;
        align-items:center;
        justify-content:center;
        height:100vh;
        background:linear-gradient(135deg,#ff9a9e,#fad0c4);
        text-align:center;
        font-family:'Segoe UI',sans-serif;
        padding:20px;
    ">
        <img src="couple.jpg" style="
            width:260px;
            border-radius:20px;
            box-shadow:0 10px 30px rgba(0,0,0,0.3);
            margin-bottom:25px;
        ">
        <h1 style="color:#e91e63;">YAY!!! üòçüíñ</h1>
        <p style="font-size:20px;color:#555;">
            You just made my Valentine perfect, Rohit ‚ù§Ô∏è
        </p>
    </div>
    `;

    // start hearts ONLY after YES
    setInterval(() => {
        const heart = document.createElement("div");
        heart.className = "heart";
        heart.innerHTML = "üíó";
        heart.style.left = Math.random() * 100 + "vw";
        heart.style.fontSize = (20 + Math.random() * 20) + "px";
        document.body.appendChild(heart);
        setTimeout(() => heart.remove(), 6000);
    }, 300);
}
</script>

</body>
</html>
